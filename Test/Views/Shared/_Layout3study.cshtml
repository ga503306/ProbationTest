<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light navbar-custom shadow">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav2" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav2">
            <a class="navbar-brand" href="#">
                <img class="logo" src="http://tw.3study.com/Content/Image/fix/logo.png" alt="">
            </a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">探索課程</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">我要開課</a>
                </li>
            </ul>
            <ul class="navbar-nav ">
                <li class="nav-item active">
                    <a class="nav-link" href="#">登入</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#">註冊</a>
                </li>
            </ul>
        </div>
    </nav>
    @*側邊購物車選單 start*@
    <button id="btn_hover" class="btn_shoppingcat" onclick="SbOpen()">1<i class="fa fa-shopping-cart"></i></button>
    <button class="btn_contact">與我聯絡</button>
    <div class="sidebar bar-block animate-right" style="display:none;" id="mySidebar">
        <button class="bar-item " onclick="SbClose()">Close &times;</button>
        <div id="ShoppingCart_pv">

        </div>
    </div>
    @*側邊購物車選單 end*@

    @RenderBody()

    <footer>
        <div class="fixed-bottom footer-custom row">
            <div class="col-3 col-sm-3 col-md-3 col-lg-3 footer-item-vertical">
                <div class="footer-item-center mt-3">
                    <img class="footer-item-img" src="~/Images/footer1.png" />
                </div>
                <div class="footer-item-center mt-3">
                    <span>課程總攬</span>
                </div>
            </div>
            <div class="col-3 col-sm-3 col-md-3 col-lg-3 footer-item-vertical">
                <div class="footer-item-center mt-3">
                    <img class="footer-item-img" src="~/Images/footer2.png" />
                </div>
                <div class="footer-item-center mt-3">
                    <span>課程總攬</span>
                </div>
            </div>
            <div class="col-3 col-sm-3 col-md-3 col-lg-3 footer-item-vertical">
                <div class="footer-item-center mt-3">
                    <img class="footer-item-img" src="~/Images/footer3.png" />
                </div>
                <div class="footer-item-center mt-3">
                    <span>課程總攬</span>
                </div>
            </div>
            <div class="col-3 col-sm-3 col-md-3 col-lg-3 footer-item-vertical">
                <div class="footer-item-center mt-3">
                    <img class="footer-item-img" src="~/Images/footer4.png" />
                </div>
                <div class="footer-item-center mt-3">
                    <span>課程總攬</span>
                </div>
            </div>
        </div>
    </footer>
    @*alertbox start*@
    <div id="box" style="display:none">
        <i class="fa fa-exclamation-circle" style="font-size: 45px;"></i>
        <h1 id="boxtext">test</h1>
        <button class="boxclose" onclick="CloseAlert();">關閉</button>
    </div>
    @*alertbox end*@
    @*loading*@
    <div id="loading_div" style="position: fixed; top: 0; width: 100%; height: 100%; display: none; z-index: 999; background: rgba(0, 0, 0, 0.4);">
        <div id="loading" class="sk-circle">
            <div class="sk-circle1 sk-child"></div>
            <div class="sk-circle2 sk-child"></div>
            <div class="sk-circle3 sk-child"></div>
            <div class="sk-circle4 sk-child"></div>
            <div class="sk-circle5 sk-child"></div>
            <div class="sk-circle6 sk-child"></div>
            <div class="sk-circle7 sk-child"></div>
            <div class="sk-circle8 sk-child"></div>
            <div class="sk-circle9 sk-child"></div>
            <div class="sk-circle10 sk-child"></div>
            <div class="sk-circle11 sk-child"></div>
            <div class="sk-circle12 sk-child"></div>
        </div>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    <link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    function SbOpen() {
        document.getElementById("mySidebar").style.display = "block";
    }

    function SbClose() {
        document.getElementById("mySidebar").style.display = "none";
    }

    $(function () {
        //側邊購物車 hover 觸發
        $("#btn_hover").mouseover(function () {
            SbOpen();
        });
    });
</script>